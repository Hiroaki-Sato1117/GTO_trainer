{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "paths": {
      "@shared/*": ["./shared/*"],
      "@engine/*": ["./server/src/engine/*"],
      "@ai/*": ["./server/src/ai/*"],
      "@gto/*": ["./server/src/gto/*"]
    }
  },
  "include": ["shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist"]
}
